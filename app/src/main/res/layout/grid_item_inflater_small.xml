<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:card_view="http://schemas.android.com/tools">

  <RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
      android:id="@+id/cardTag"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="false"
      app:cardCornerRadius="8dp"

      android:layout_marginBottom="-8dp"
      android:layout_marginTop="4dp"
      android:layout_marginLeft="4dp"
      android:layout_marginRight="4dp"
      android:background="@android:color/transparent"
      app:cardElevation="8dp"
      app:contentPadding="0dp"
      app:cardPreventCornerOverlap="false"
      app:cardUseCompatPadding="true">

      <ImageView
        android:id="@+id/bookImageTag"
        android:layout_width="96dp"
        android:layout_height="128dp"
        android:scaleType="fitXY"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.AppCompatTextView
      android:id = "@+id/bookTitleTag"
      android:layout_width="96dp"
      android:layout_height="24dp"
      android:layout_marginStart="12dp"
      android:textAlignment="textStart"
      android:gravity="start"

      android:ellipsize="end"
      android:maxLines="2"
      android:textSize="12.8sp"
      android:textColor="@color/primaryTextColor"
      app:autoSizeMaxTextSize="12.8sp"
      app:autoSizeMinTextSize="8sp"
      app:autoSizeStepGranularity="0.2sp"
      app:autoSizeTextType="uniform"
      android:layout_below="@id/cardTag"
      />
    <android.support.v7.widget.AppCompatTextView
      android:id = "@+id/bookPublisherTag"
      android:layout_width="96dp"
      android:layout_height="16dp"
      android:layout_marginStart="12dp"
      android:textAlignment="textStart"
      android:gravity="start"

      android:ellipsize="end"
      android:maxLines="2"
      android:textSize="9.6sp"
      android:textColor="@color/secondaryTextColor"
      app:autoSizeMaxTextSize="9.6sp"
      app:autoSizeMinTextSize="6sp"
      app:autoSizeStepGranularity="0.2sp"
      app:autoSizeTextType="uniform"
      android:layout_below="@id/bookTitleTag"
      />

  </RelativeLayout>


</android.support.constraint.ConstraintLayout>